@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider FullWidth="true" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open">
        <MudDrawerHeader Class="top-row px-4 d-flex justify-center align-center">
            <MudText Typo="Typo.h6">FPLSP_Tutorial</MudText>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/major">Quản lý chuyên ngành</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/lecturer-manager">Quản lý giảng viên</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/post-manager">Quản lý bài viết</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>

@code {
    bool open = false;

    void ToggleDrawer()
    {
        open = !open;
    }
}